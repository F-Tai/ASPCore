@model ASPCore.Models.HocVien

@{
    ViewData["Title"] = "ThongTin";
}

<h1>ThongTin</h1>

<h4>HocVien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ThongTin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSo" class="control-label"></label>
                <input asp-for="MaSo" class="form-control" />
                <span asp-validation-for="MaSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHocVien" class="control-label"></label>
                <input asp-for="TenHocVien" class="form-control" />
                <span asp-validation-for="TenHocVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label"></label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiemTrungBinh" class="control-label"></label>
                <input asp-for="DiemTrungBinh" class="form-control" />
                <span asp-validation-for="DiemTrungBinh" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GioiTinh" /> @Html.DisplayNameFor(model => model.GioiTinh)
                </label>
            </div>
            <div class="form-group">
                <input name="Ghi" type="submit" value="Ghi File Text" class="btn btn-primary btn-outline-danger" />
                <input name="Ghi" type="submit" value="Ghi File JSON" class="btn btn-primary btn-outline-danger" />
                <br /><br />                
                <a class="btn btn-info btn-outline-warning" asp-action="DocFileText">Đọc File Text</a>
                <a class="btn btn-info btn-outline-warning" asp-action="DocFileJSON">Đọc File JSON</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
